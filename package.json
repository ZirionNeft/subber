{
	"name": "sapphire-subber",
	"description": "Subcommands plugin for Sapphire framework",
	"version": "1.0.0",
	"main": "dist/index.js",
	"author": "ZirionNeft",
	"license": "MIT",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"homepage": "https://github.com/ZirionNeft/subber",
	"scripts": {
		"start": "node dist/index.js",
		"dev": "yarn build && yarn start",
		"lint": "eslint src --ext ts --fix",
		"update": "yarn upgrade-interactive --latest",
		"build": "tsc -b src",
		"clean": "tsc -b src --clean",
		"watch": "tsc -b src -w",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"sversion": "yarn standard-version",
		"prepublishOnly": "yarn build",
		"postbuild": "run-p esm:**",
		"esm:register": "gen-esm-wrapper dist/register.js dist/register.mjs",
		"esm:default": "gen-esm-wrapper dist/index.js dist/index.mjs"
	},
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		},
		"./register": {
			"import": "./dist/register.mjs",
			"require": "./dist/register.js"
		}
	},
	"dependencies": {
		"tslib": "^2.0.1"
	},
	"peerDependencies": {
		"@sapphire/pieces": "1.x",
		"@sapphire/framework": "^1.0.0-alpha.1",
		"discord.js": "12.x",
		"@types/ws": "7.x"
	},
	"peerDependenciesMeta": {
		"@types/ws": {
			"optional": true
		}
	},
	"devDependencies": {
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^11.0.0",
		"@jest/types": "^26.6.2",
		"@quantumly/eslint-config": "^1.1.0",
		"@types/jest": "^26.0.15",
		"@types/module-alias": "^2.0.0",
		"@types/node": "^14.14.8",
		"@typescript-eslint/eslint-plugin": "^4.8.1",
		"@typescript-eslint/parser": "^4.8.1",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^7.13.0",
		"gen-esm-wrapper": "^1.1.1",
		"husky": "^4.3.0",
		"jest": "^26.6.3",
		"jest-circus": "^26.6.3",
		"lint-staged": "^10.5.1",
		"npm-run-all": "^4.1.5",
		"prettier-eslint": "^12.0.0",
		"standard-version": "^9.0.0",
		"ts-jest": "^26.4.4",
		"ts-node": "^9.0.0",
		"typescript": "^4.0.5"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ZirionNeft/subber.git"
	},
	"files": [
		"dist",
		"!dist/*.tsbuildinfo",
		"register.*"
	],
	"engines": {
		"node": ">=14",
		"npm": ">=6"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "yarn lint-staged"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.ts": [
			"eslint --fix --ext ts"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"keywords": [
		"sapphire-project",
		"plugin",
		"bot",
		"typescript",
		"ts",
		"yarn",
		"discord",
		"sapphire",
		"subcommands"
	],
	"bugs": {
		"url": "https://github.com/ZirionNeft/subber/issues"
	},
	"publishConfig": {
		"access": "public"
	}
}
